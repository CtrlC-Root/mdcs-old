root = true

[*]
charset = utf-8
indent_size = 4
indent_style = space
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{avsc,avpr}]
indent_size = 2

[*.md]
indent_size = 2

[Makefile]
indent_style = tab

[*.vue]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2
